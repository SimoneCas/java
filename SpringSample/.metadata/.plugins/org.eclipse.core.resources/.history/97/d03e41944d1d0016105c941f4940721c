package mvcsample.model;

import java.util.Date;
import java.util.*;

public class User {
	private final Long id;
	private final String name;
	private final String surname;
	private final Date birthdate;
	private Double height;
	private Double weight;
	
	public User(String name, String surname, Date time) {
		this(name, surname, time, null, null);
		}
	
	public User(String name, String surname, Date time, Double height, Double weight){
		this.id= null;
		this.name=name;
		this.surname=surname;
		this.birthdate = time;
		this.height = height;
		this.weight=weight;
	}

	public Long getId() {
		return id;
	}

	public String getName() {
		return name;
	}

	public String getSurname() {
		return surname;
	}

	public Date getBirthdate() {
		return birthdate;
	}

	public Double getHeight() {
		return height;
	}

	public Double getWeight() {
		return weight;
	}
	
	@Override
	public boolean equals(Object that) {
		if (that instanceof User){
			User thatUser = (User) that;
			if(this.id.equals(thatUser.id) && this.birthdate.equals(thatUser.birthdate)){
				return true;
			} else
				return false;
		} else
			return false;
	
	}
	@Override
	public int hashCode() {
	return HashCodeBuilder.reflectionHashCode(this, "id", "time");
	}
}
